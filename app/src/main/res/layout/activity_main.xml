<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!--标题栏-->
    <include layout="@layout/titlebar" />

    <!--FrameLayout-->
    <!--<FrameLayout-->
    <!--android:id="@+id/fl_main_content"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="1" />-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></ListView>

    <!--RadioGroup-->
    <RadioGroup
        android:id="@+id/rg_bottom_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:id="@+id/rb_index"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_index_drawable_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_video"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_video_drawable_selector"
            android:text="西瓜视频" />

        <RadioButton
            android:id="@+id/rb_weitoutiao"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_weitoutiao_drawable_selector"
            android:text="微头条" />

        <RadioButton
            android:id="@+id/rb_user_center"
            style="@style/bottom_tag_style"
            android:drawableTop="@drawable/rb_user_center_drawable_selector"
            android:text="未登录" />
    </RadioGroup>
</LinearLayout>
