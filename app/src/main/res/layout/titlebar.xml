<?xml version="1.0" encoding="utf-8"?>
<com.mj.todayheadline.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/holo_red_light"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!--搜索框-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="9"
        android:background="@drawable/border_relative_layout"
        android:gravity="center_vertical">

        <!--<ImageView-->
        <!--android:id="@+id/iv_search"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:src="@drawable/search" />-->

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/et_search_bg_selector"
            android:drawableLeft="@drawable/et_search_drawable_selector"
            android:drawablePadding="3dp"
            android:hint="当前热搜..."
            android:textColor="@drawable/et_search_textcolor_selector"
            android:textSize="14sp" />
    </RelativeLayout>

    <!--“发布”图标-->
    <ImageView
        android:id="@+id/iv_publish"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/publish" />

</com.mj.todayheadline.view.TitleBar>